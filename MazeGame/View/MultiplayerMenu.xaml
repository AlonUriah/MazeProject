<Window x:Name="wdw_multimenu" x:Class="MazeGame.View.MultiplayerMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGame.View"
        xmlns:controls="clr-namespace:MazeGame.View.Controls"
        mc:Ignorable="d"
        Title="Multi-Player Menu" Height="300" Width="300" WindowStartupLocation="CenterScreen" Closed="wdw_multimenu_Close">
    <StackPanel HorizontalAlignment="Center" Height="271" VerticalAlignment="Center" Width="290" Margin="0,0,0,0" IsManipulationEnabled="True">
        <controls:GameList  x:Name="games_list" Margin="0,10,0,0"/>


        <controls:GameProperties x:Name="games_properties"/>


    </StackPanel>
</Window>
