<UserControl x:Class="MazeGame.View.Controls.GameSurface"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MazeGame.View.Controls"
             xmlns:ValueConverters="clr-namespace:MazeGame.View.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ValueConverters:HeightToPixelsConverter x:Key="HeightConverter"/>
        <ValueConverters:WidthToPixelsConverter x:Key="WidthConverter"/>
    </UserControl.Resources>

    <Canvas Height="{Binding SingleMaze.Rows, Converter={StaticResource HeightConverter}, Mode=OneWay}"
            Width="{Binding SingleMaze.Cols, Converter={StaticResource WidthConverter}, Mode=OneWay}">
        <TextBox Text="Uriah" Width="50"/>
    </Canvas>
    
</UserControl>
